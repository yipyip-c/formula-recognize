{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "formula_recognize",
  "version": "0.1.0",
  "identifier": "com.formula-recognize.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "一个简单的公式识别工具",
        "width": 700,
        "height": 400
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true  
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}